<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/rounded">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_weather_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tv_date" />

    <TextView
        android:id="@+id/tv_high_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70°"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/iv_weather_icon"
        android:layout_alignTop="@+id/iv_weather_icon" />

    <TextView
        android:id="@+id/tv_low_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50°"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/tv_high_temperature"
        android:layout_alignTop="@+id/iv_weather_icon" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunny"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/tv_high_temperature"
        android:layout_toEndOf="@+id/iv_weather_icon" />

</RelativeLayout>